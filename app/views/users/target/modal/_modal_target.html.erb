<div class="modal fade modal_target"tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="h3">
          <i class="fas fa-map-pin"></i>
          WCMを基にした目標の編集
        </h3>
      </div>
      <div class="col-12" id="base-tags-flash">
      <% if flash[:success].present? %>
        <div class="alert alert-success alert-dismissible fade show" role="alert"><%= flash[:success] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
      </div>
      <div class="modal-body">
        <ul class="nav nav-tabs" id="targetTab" role="tablist">
          <li class="nav-item">
            <%= link_to "長期目標", targets_transitions_path(transition_value: "long"), class: "nav-link", data: { toggle: "tab" }, role: "tab", aria: { selected: true }, id: "target-active", remote: true %>
          </li>
          <li class="nav-item">
            <%= link_to "中期目標", targets_transitions_path(transition_value: "middle"), class: "nav-link", data: { toggle: "tab" }, role: "tab", aria: { selected: true }, id: "target-active", remote: true %>
          </li>
          <li class="nav-item">
            <%= link_to "短期目標", targets_transitions_path(transition_value: "short"), class: "nav-link", data: { toggle: "tab" }, role: "tab", aria: { selected: true }, id: "target-active", remote: true %>
          </li>
        </ul>
        <div class="target-content" id="targetTabContent">
          <div class="tab-pane fade show active" id="wcm-container" role="tabpanel" aria-labelledby="home-tab">
            <%= render partial: "users/target/modal/work_space" %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>
