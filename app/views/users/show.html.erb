<div class="row user_work_space">
  <div class="col-12 flash">
    <%= render partial: 'layouts/flash' %>
  </div>
  <%= render partial: 'wcm_tags.html.erb' %>

  <section class="col-12 wcm-seat">
    <div class="row">
      <div class="col-12 row wcm-work-space">
          <div class="col-6 col-md-12 wcm-chart">
            <div class="row">
              <div class="col-12"><h2 class="h2">WCMシート</h2></div>

              <div class="col-12 col-md-4 will-chart chart">
                <p>Will</p>
                <div class="will-tags tags">
                  <div class="will-tag tag">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#wcm-tagsModal">
                      primary
                    </button>
                    <button type="button" class="btn btn-primary">Primary</button>
                  </div>
                  <div class="will-tag tag">
                    <button type="button" class="btn btn-primary">Primary</button>
                    <button type="button" class="btn btn-primary">Primary</button>
                  </div>
                  <div class="will-tag tag">
                    <button type="button" class="btn btn-primary">Primary</button>
                    <button type="button" class="btn btn-primary">Primary</button>
                  </div>
                </div>
              </div>

              <div class="col-12 col-md-4 can-chart chart">
                <p>Can</p>
                <div class="can-tags tags">
                  <div class="can-tag tag">
                    <button type="button" class="btn btn-success">Primary</button>
                    <button type="button" class="btn btn-success">Primary</button>
                  </div>
                  <div class="can-tag tag">
                    <button type="button" class="btn btn-success">Primary</button>
                    <button type="button" class="btn btn-success">Primary</button>
                  </div>
                  <div class="can-tag tag">
                    <button type="button" class="btn btn-success">Primary</button>
                    <button type="button" class="btn btn-success">Primary</button>
                  </div>
                </div>
              </div>

              <div class="col-12 col-md-4 must-chart chart">
                <p>Must</p>
                <div class="must-tags tags">
                  <div class="must-tag tag">
                    <button type="button" class="btn btn-danger">Primary</button>
                    <button type="button" class="btn btn-danger">Primary</button>
                  </div>
                  <div class="must-tag tag">
                    <button type="button" class="btn btn-danger">Primary</button>
                    <button type="button" class="btn btn-danger">Primary</button>
                  </div>
                  <div class="must-tag tag">
                    <button type="button" class="btn btn-danger">Primary</button>
                    <button type="button" class="btn btn-danger">Primary</button>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-6 col-md-12 wcm-result">
            <h3 class="col-12 h3">ベースタグ</h3>
            <div class="base-tag">
              <button type="button" class="btn btn-primary">Primary</button>
              <button type="button" class="btn btn-success">Warning</button>
              <button type="button" class="btn btn-danger">Danger</button>
            </div>
            <div class="behavioral-index">
              <h3 class="h3">WCMからの行動指標</h3>
              <div>
                <p>私は〇〇をしたい。その理由は、〇〇である。（Willベースタグ）
                    今まで、～～という経験をしてきた。～～といったスキルもある。（Canベースタグ）
                    今後は～～することが求められる。そうしたスキル・経験を身に付けて行動していく。（Mustベースタグ)
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="text-right w-100 mt-2 mb-5">
          <a><i class="fas fa-arrow-right pr-2"></i>他のユーザーのWCMを見る</a>
        </div>
      </div>
    </div>
  <section>

  <section class="col-12 wcm-target">
    <div class="row">
      <div class="col-12">
        <h2 class="h2">WCMを基にした目標</h2>
      </div>

      <div class="col-12 progress-meter">
        <div class="col-12">
          <h3>歩き始めて0日目</h3>
        </div>
        <div class="col-10 offset-1 m-auto">
          <div class="progress">
            <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </div>
      </div>

      <div class="col-12 d-flex justify-content-around target">
        <h3>90日後の目標</h3>
        <p>〇〇する</p>
        <button type="button" class="btn btn-success">達成</button>
      </div>
      <div class="col-12 d-flex justify-content-around target">
        <h3>90日後の目標</h3>
        <p>〇〇する</p>
        <button type="button" class="btn btn-warning">未達成</button>
      </div>
      <div class="col-12 d-flex justify-content-around target">
        <h3>90日後の目標</h3>
        <p>〇〇する</p>
        <button type="button" class="btn btn-warning">未達成</button>
      </div>
      <div class="target-edit">
        <button type="button" class="btn btn-success">目標を編集</button>
      </div>
    </div>
  </section>

  <section class="col-12 corporate-analysis">
    <div class="row">
      <div class="col-12">
        <h2 class="h2">企業分析</h2>

        <form method="get" action="#" class="search_container text-right">
          <input type="text" size="25" placeholder="　キーワード検索">
          <input type="submit" value="&#xf002">
        </form>
        <div class="table-responsive-lg">
          <table class="table table-hover text-center">
            <thead>
              <tr class="bg-success text-white">
                <th scope="col">企業名</th>
                <th scope="col">URL</th>
                <th scope="col">事業</th>
                <th scope="col">社風/環境</th>
                <th scope="col">ビジョン</th>
                <th scope="col">将来性</th>
                <th scope="col">スキル</th>
                <th scope="col">待遇</th>
                <th scope="col">志望度</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>〇〇株式会社</td>
                <td>A</td>
                <td>A</td>
                <td>A</td>
                <td>A</td>
                <td>A</td>
                <td>A</td>
                <td>A</td>
                <td>35</td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="corporate-edit">
          <button type="button" class="btn btn-success">企業編集</button>
        <div>
      </div>
    </div>
  </section>
</div>
<% content_for(:javascript) do %>
	<%= javascript_include_tag 'users_show' %>
<% end %>