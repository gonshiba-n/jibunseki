<div class="row mx-1 user_work_space">
  <div class="col-12 flash">
    <%= render partial: 'layouts/flash' %>
  </div>
  <%= render partial: 'users/wcm_seat/modal/modal_show' %>
  <%= render partial: 'users/base_tags/modal/base_tags' %>

  <section class="wcm-seat">
    <div class="row wcm-work-space">
            <div class="col-12">
              <h2 class="h2">WCMシート</h2>
            </div>
        <div class="col-6 col-md-12 wcm-chart">
        <div class="row">
            <div class="col-12 col-md-4 will-chart chart">
              <p>Will</p>
              <div class="row mx-md-1 will-tags tags" id="will-seat">
                <%= render partial: "users/wcm_seat/wcm_seat_tags", locals: { instance: @will_tags, tags_wcm: "will" } %>
              </div>
            </div>

            <div class="col-12 col-md-4 can-chart chart">
              <p>Can</p>
              <div class="row mx-md-1 can-tags tags" id="can-seat">
                <%= render partial: "users/wcm_seat/wcm_seat_tags", locals: { instance: @can_tags, tags_wcm: "can" } %>
              </div>
            </div>

            <div class="col-12 col-md-4 must-chart chart">
              <p>Must</p>
              <div class="row mx-md-1 must-tags tags" id="must-seat">
                <%= render partial: "users/wcm_seat/wcm_seat_tags", locals: { instance: @must_tags, tags_wcm: "must" } %>
              </div>
            </div>
          </div>
        </div>

        <div class="col-6 col-md-12 wcm-result">
          <h3 class="col-12 h3">ベースタグ</h3>
          <div class="row" id="base-tags">
            <%= render partial: "users/base_tags/base_tags_btn" %>
          </div>
          <div class="guideline">
            <h3 class="h3">WCMからの行動指標</h3>
            <div class="guideline-container" data-toggle="modal" data-target=".bd-example-modal-xl" id="guideline-container">
              <%= render "users/base_tags/modal/modal_guideline_text", text: @guideline.text %>
            </div>
          </div>
        </div>
      </div>
      <div class="text-right w-100 mt-2 mb-5">
        <a><i class="fas fa-arrow-right pr-2"></i>他のユーザーのWCMを見る</a>
      </div>
    </div>
  <section>

  <section class="col-12 wcm-target">
    <div class="row">
      <div class="col-12">
        <h2 class="h2">WCMを基にした目標</h2>
      </div>

      <div class="col-12 progress-meter">
        <div class="col-12">
          <h3>歩き始めて0日目</h3>
        </div>
        <div class="col-10 offset-1 m-auto">
          <div class="progress">
            <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </div>
      </div>

      <div class="col-12 d-flex justify-content-around target">
        <h3>90日後の目標</h3>
        <p>〇〇する</p>
        <button type="button" class="btn btn-success">達成</button>
      </div>
      <div class="col-12 d-flex justify-content-around target">
        <h3>90日後の目標</h3>
        <p>〇〇する</p>
        <button type="button" class="btn btn-warning">未達成</button>
      </div>
      <div class="col-12 d-flex justify-content-around target">
        <h3>90日後の目標</h3>
        <p>〇〇する</p>
        <button type="button" class="btn btn-warning">未達成</button>
      </div>
      <div class="target-edit">
        <button type="button" class="btn btn-success">目標を編集</button>
      </div>
    </div>
  </section>

  <section class="col-12 corporate-analysis">
    <div class="row">
      <div class="col-12">
        <h2 class="h2">企業分析</h2>

        <form method="get" action="#" class="search_container text-right">
          <input type="text" size="25" placeholder="キーワード検索">
          <input type="submit" value="&#xf002">
        </form>
        <div class="table-responsive-lg">
          <table class="table table-hover text-center">
            <thead>
              <tr class="bg-success text-white">
                <th scope="col">企業名</th>
                <th scope="col">URL</th>
                <th scope="col">事業</th>
                <th scope="col">社風/環境</th>
                <th scope="col">ビジョン</th>
                <th scope="col">将来性</th>
                <th scope="col">スキル</th>
                <th scope="col">待遇</th>
                <th scope="col">志望度</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>〇〇株式会社</td>
                <td>A</td>
                <td>A</td>
                <td>A</td>
                <td>A</td>
                <td>A</td>
                <td>A</td>
                <td>A</td>
                <td>35</td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="corporate-edit">
          <button type="button" class="btn btn-success">企業編集</button>
        <div>
      </div>
    </div>
  </section>
</div>