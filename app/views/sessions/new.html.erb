<% if @guest_user %>
	<div class="row login">
		<%= form_with model: @user, url: login_path, class: 'col-12 col-md-6', method: :post, local: true do |f| %>
			<h2>Login</h2>
			<%= flash.now[:danger] %>
			<div class="form-group">
				<%= f.label :email, 'メールアドレス', for: 'InputEmail' %>
				<%= f.text_field :email, value: @guest_user.email, class: "form-control", id: 'InputEmail' %>
			</div>
			<div class="form-group">
				<%= f.label :password, 'パスワード', for: 'InputPassword' %>
				<%= f.text_field :password, type: 'password', value: @pass, class: "form-control", id: 'InputPassword' %>
			</div>
			<button type="submit" class="btn btn-success btn-lg">Login</button>
		<% end %>
	</div>
<% else %>
	<div class="row login">
		<%= form_with model: @user, url: login_path, class: 'col-12 col-md-6', method: :post, local: true do |f| %>
			<h2>Login</h2>
			<%= flash.now[:danger] %>
			<div class="form-group">
				<%= f.label :email, 'メールアドレス', for: 'InputEmail' %>
				<%= f.text_field :email, class: "form-control", id: 'InputEmail' %>
			</div>
			<div class="form-group">
				<%= f.label :password, 'パスワード', for: 'InputPassword' %>
				<%= f.text_field :password, type: 'password', class: "form-control", id: 'InputPassword' %>
			</div>
			<button type="submit" class="btn btn-success btn-lg">Login</button>
		<% end %>
	</div>
<% end %>