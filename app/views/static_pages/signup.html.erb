<div class="row signup">
		<form class="col-12 col-md-6">
			<h2>Signup</h2>
			<div class="form-group">
				<label for="exampleInputName">ユーザー名</label>
				<input type="name" class="form-control" id="exampleInputName">
			</div>
			<div class="form-group">
				<label for="exampleInputPassword">パスワード</label>
				<input type="password" class="form-control" id="exampleInputPassword">
			</div>
			<div class="form-group">
				<label for="exampleInputPasswordConfirm">パスワード再確認</label>
				<input type="password" class="form-control" id="exampleInputPasswordConfirm">
			</div>
			<button type="submit" class="btn btn-success btn-lg">Signup</button>
		</form>
</div>